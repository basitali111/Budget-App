
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <div class="actions">
    <%= link_to "< Back ", unauthenticated_user_root_path, :class=> "back-btn" %>
  <h3 class="register-btn">LOGIN</h3>
    <%= f.submit "Log in", :class=> "signup-btn"%>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "Email",:class=> "Name-input"%>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password" ,placeholder: "Password",:class=> "Name-input"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="check-btn">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me,:class=> "remeberme-checkbox" %>
    </div>
  <% end %>

<% end %>


