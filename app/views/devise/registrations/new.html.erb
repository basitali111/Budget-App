
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class= "signup-container">
  <div class="actions">
    <%= link_to "< Back ", unauthenticated_user_root_path, :class=> "back-btn" %>
  <h3 class="register-btn">REGISTER</h3>
    <%= f.submit "Next", :class=> "signup-btn"%>
  </div>
 <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name",placeholder: "Full Name",:class=> "Name-input"%>
  </div>

   <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Email",:class=> "Name-input" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6 characters minimum)",:class=> "Name-input" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "Password",:class=> "Name-input" %>
  </div>
</div>
<% end %>

